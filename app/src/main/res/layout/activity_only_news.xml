<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.onlyNews">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/imageview_container"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview_new_single"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/box"
                    android:scaleType="fitCenter" />
                <TextView
                    android:id="@+id/text_category_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/flotante"
                    android:text="Categoria"
                    android:textColor="@color/text_white"
                    android:padding="8dp"
                    android:layout_margin="8dp"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:id="@+id/text_titulo_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITULO DE NOTICIA"
                android:textSize="24sp"
                android:textColor="@color/text_black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text_date_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Noticia"
                android:textSize="15sp"
                android:layout_marginLeft="8dp"
                />
            <ScrollView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_body_new_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuerpo de noticia"
                    android:textSize="18sp"/>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@color/colorAccent"
        android:src="@drawable/ic_favorite"
        android:visibility="visible"
        app:fabSize="normal"
        app:layout_anchor="@id/imageview_container"
        app:layout_anchorGravity="bottom|right|end" />



</android.support.design.widget.CoordinatorLayout>